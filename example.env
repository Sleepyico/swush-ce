# --- Core ---
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Swush
NEXT_PUBLIC_APP_URL=https://your-domain.example
NEXT_PUBLIC_SUPPORT_EMAIL=help@your-domain.example
NEXT_PUBLIC_SUPPORT_NAME=Your Support
UPLOAD_ROOT=/Volumes/Backup
CORS_ORIGINS=https://your-domain.example

# --- Enable funny slugs --- (e.g. YodaCrazyFalconRider instead of a ewi24if2f or smth I guess)
ENABLE_FUNNY_SLUGS=true

# --- Database ---
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require&channel_binding=require

# --- Auth ---
AUTH_SECRET=replace-me-with-long-secret

# --- SMTP ---
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=noreply@your-domain.example
SMTP_PASS=replace-me
SMTP_FROM="Swush No Reply <noreply@your-domain.example>"

# --- EMAILING ---
DISABLE_LIMITS_EMAILS=yes

# --- Usernames ---
PRESERVED_USERNAMES=root,system,moderator,mod,administrator,staff,security,help,contact,about,terms,privacy,api,dev,developer,test,testing,guest,superuser,webmaster,bot,null,undefined,anonymous,user,username,email,password,login,register,signup,signin,dashboard,settings,profile,account,helpdesk,service,services,sysadmin